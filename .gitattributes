# Normaliza todos los archivos de texto a LF
* text=auto eol=lf

# Archivos de código que siempre deben ir con LF
*.js   text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.jsx  text eol=lf
*.css  text eol=lf
*.html text eol=lf
*.json text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf

# Archivos que sí deben quedarse en CRLF (scripts de Windows)
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf
